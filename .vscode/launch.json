            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "pathMappings": {
                "/var/lib/nextcloud/server/3rdparty/sabre/dav": "${workspaceRoot}/dav",
                "/var/lib/nextcloud/server/3rdparty/sabre/vobject": "${workspaceRoot}/vobject",
                "/var/lib/nextcloud/server": "${workspaceRoot}/server",
